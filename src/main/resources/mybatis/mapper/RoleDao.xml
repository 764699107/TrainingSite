<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hk.TS.dao.RoleDao">
    <resultMap id="roleMap" type="Role">
        <id column="r_id" property="id"/>
        <result column="r_type" property="type"/>
    </resultMap>

    <select id="getById" resultMap="roleMap">
        select * from Role where r_id = #{id}
    </select>

    <insert id="insert">
        insert into Role (r_type) values (#{type})
    </insert>

    <update id="update">
        update Role set
            r_type = #{type}
        where r_id = #{id}
    </update>

    <delete id="deleteById">
        delete from Role r_id = #{id}
    </delete>

    <select id="getRoles" resultMap="roleMap">
        select * from Role limit #{offset}, #{size};
    </select>

</mapper>