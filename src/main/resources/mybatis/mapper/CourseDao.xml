<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hk.TS.dao.CourseDao">
    <resultMap id="courseResultMap" type="Course">
        <id property="id" column="course_id"/>
        <result property="name" column="course_name"/>
        <result property="info" column="course_info"/>
        <result property="price" column="price"/>
        <association property="type_id" javaType="CourseType">
            <id column="course_type_id" property="id"/>
            <result column="course_type_name" property="name"/>
            <result column="course_type_father_id" property="father"/>
        </association>
    </resultMap>

    <select id="getById" resultMap="courseResultMap">
        select Course.*,CourseType.course_type_id, CourseType.course_type_name
        from Course,CourseType
        where course.course_id = #{id} and course.course_type_id = coursetype.course_type_id
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into Course (course_name, course_type_id,price,course_info)
        values
        (#{name}, #{coursetype.id}, #{price}, #{info})
    </insert>

    <delete id="deleteById">
        delete from Course where course_id = #{id}
    </delete>

    <update id="update">
        update Course set
        course_name=#{name},
        course_type_id=#{coursetype.id},
        price=#{price},
        course_info=#{info},
        where course_id=#{id}
    </update>

    <select id="getAllCourse" resultMap="courseResultMap">
        select Course.*, CourseType.* from Course, CourseType where course.course_type_id = coursetype.course_type_id
    </select>
</mapper>